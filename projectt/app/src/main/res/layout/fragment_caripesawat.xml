<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".caripesawat"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/ketyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apk"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:text="Cari Tiket Pesawat"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apk"
        android:layout_marginStart="24dp"
        android:layout_marginTop="58dp"
        android:text="Dari"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmail2"
        android:layout_marginStart="24dp"
        android:layout_marginTop="49dp"
        android:text="Tujuan"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewPassword3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPassword2"
        android:layout_marginStart="24dp"
        android:layout_marginTop="39dp"
        android:text="Tanggal\nBerangkat"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dari"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_below="@+id/apk"
        android:layout_marginStart="90dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/textViewEmail2"
        android:hint="Input Lokasi"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toEndOf="@+id/textViewPassword2"
        app:layout_constraintTop_toBottomOf="@+id/tujuan" />

    <EditText
        android:id="@+id/tujuan"
        android:layout_width="220dp"
        android:layout_height="52dp"
        android:layout_below="@+id/dari"
        android:layout_marginStart="66dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/textViewPassword2"
        android:hint="Lokasi Tujuan"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toEndOf="@+id/textViewEmail2" />

    <TextView
        android:id="@+id/apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:paddingStart="32dp"
        android:paddingTop="20dp"
        android:text="Gotiket"
        android:textColor="#0b9fbc"
        android:textSize="40sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/btnpilihtgl"
        android:layout_width="200dp"
        android:height="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tujuan"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textViewPassword3"
        android:backgroundTint="#0b9fbc"
        android:text="Pilih Tanggal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btncaripesawat"
        android:layout_width="82dp"
        android:backgroundTint="@color/primary"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnpilihtgl"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-79dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="57dp"
        android:layout_toEndOf="@+id/btnpilihtgl"
        android:height="10dp"
        android:text="Cari"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>